{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@adapters/*": ["adapters/*"],
      "@config/*": ["config/*"],
      "@domains/*": ["domains/*"],
      "@infra/*": ["infra/*"],
      "@middlewares/*": ["middlewares/*"],
      "@protocols/*": ["protocols/*"],
      "@tasks/*": ["tasks/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
